<%= form_tag site_search_path, method: :get do %>
    <div class="well well-sm">
        <div class="row">
            <div class="col-lg-12">
                <div class="input-group" style="z-index: 0;">

                    <%= text_field_tag(:q, params[:q] , { class:"form-control", placeholder: "Pesquisar por..." }) %>

                    <span class="input-group-btn">

                        <%= button_tag(type: "submit", class: "btn btn-default") do %>

                            <span class="glyphicon glyphicon-search"></span>

                        <% end %>

                    </span>

                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
    </div><!-- /.well well-sm -->
<% end %>