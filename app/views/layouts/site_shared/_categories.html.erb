<p class="lead">Categorias</p>
<div class="list-group">
    <% @categories.each do |category| %>
        <%= link_to site_category_path(category), class: "list-group-item" do %>
            <%= category.description %>
            <span class="pull-right badge"><%= category.ads_count %></span>
        <% end %>
    <% end %>
</div>
