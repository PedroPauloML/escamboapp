<div class="modal fade" id="sendMailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <!-- CLOSE -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">New message</h4>
        <!-- / CLOSE -->
      </div>
      <div class="modal-body">
        <!-- FORM_TAG -->
        <%= form_tag (backoffice_send_mail_index_path), remote: true do %>
          <!-- RECIPIENT -->
          <div class="form-group">
            <label for="recipient-text" class="control-label">Recipient:</label>
            <%= text_field_tag(:'recipient-text', nil, class: "form-control", readonly:"readonly") %>
          </div>
          <!-- / RECIPIENT -->
          <!-- ASSUNTO -->
          <div class="form-group">
            <label for="recipient-name" class="control-label">Assunto:</label>
            <%= text_field_tag(:'subject-text', nil, class: "form-control", required: "required") %>
          </div>
          <!-- / ASSUNTO -->
          <!-- MESSAGE -->
          <div class="form-group">
            <label for="message-text" class="control-label">Message:</label>
            <%= text_area_tag(:'message-text', nil, class: "form-control", required: "required") %>
          </div>
          <!-- / MESSAGE -->
      </div>
      <!-- SUBMIT -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Send message</button>
      </div>
      <!-- / SUBMIT -->
        <% end %>
        <!-- / FORM_TAG -->
    </div>
  </div>
</div>