<h1 class="page-header">Administradores</h1>

<!-- ERROS -->
<% if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
            <% @admin.errors.full_messages.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<!-- / ERROS -->

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <!-- FORM -->
            <%= form_for([:backoffice, @admin]) do |f| %>
                <!-- NAME -->
                <div class="form-group">
                    <label>Nome</label>
                    <%= f.text_field :name, class: "form-control", placeholder:"Nome do administrador" %>
                </div>
                <!-- /NAME -->

                <!-- EMAIL -->
                <div class="form-group">
                    <label>Email</label>
                    <%= f.text_field :email, class: "form-control", placeholder:"Email do administrador" %>
                </div>
                <!-- / EMAIL -->

                <!-- ROLE -->
                <% if policy(@admin).edit? %>
                    <div class="form-group">
                        <label>Tipo de acesso</label>
                        <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
                            <div class="radio">
                                <%= b.label { b.radio_button + b.text } %>
                            </div>
                        <% end %>
                    </div>
                <% end %>
                <!-- / ROLE -->

                <!-- PASSWORD -->
                <div class="form-group">
                    <label>Senha</label>
                    <%= f.password_field :password, class: "form-control", placeholder:"Senha" %>

                </div>
                <!-- / PASSWORD -->

                <!-- PASSWORD_CONFIRMATION -->
                <div class="form-group">
                    <label>Confirmação da Senha</label>
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirmação da senha" %>
                </div>
                <!--/ PASSWORD_CONFIRMATION -->

                <button type="submit" class="btn btn-default">
                    Salvar
                </button>
            <% end %>
            <!-- / FORM -->
        </div>
    </div>
    <!-- /.panel-body -->
</div>